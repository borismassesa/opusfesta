{
  "name": "thefesta",
  "version": "1.0.0",
  "description": "Tanzania's go-to wedding & events marketplace",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:website": "turbo dev --filter=./apps/website",
    "build:website": "turbo build --filter=./apps/website",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "postinstall": "node scripts/cleanup-vendor-react.js",
    "check:prepush": "bash scripts/prepush-check.sh",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "turbo db:studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.7.0",
  "overrides": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.0",
    "@thefesta/admin": {
      "react": "18.3.1",
      "react-dom": "18.3.1"
    },
    "@thefesta/vendor-portal": {
      "react": "18.3.1",
      "react-dom": "18.3.1"
    },
    "rest-express": {
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "tailwind-merge": "^3.4.0"
  }
}
